<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Darbarema"
    android:gravity="center|top"
    android:padding="8dp"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/bacgrand"
        app:civ_border_color="@color/bran"
        app:civ_border_width="10dp"/>

    <TextView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_marginTop="16dp"
        android:text="بنده سازنده این برنامه علی سارنج هستم به مدت دو سال است که در زمینه برنامه نویسی فعالیت دارم از حسن انتخاب شما بابت انتخاب این برنامه بسیار سپاس گزارم لطفا درمورد این برنامه در مایکت نظر دهید و در صورت مشاهده اشکال در این برنامه با ایمیل به بنده اطلاع دهید  "/>

    <Button
        android:id="@+id/bt_email"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ایمیل"
        android:textSize="35dp"
        android:textStyle="bold"/>

</LinearLayout>